                <li> <input type="checkbox" name="check" value="<%= task[i] %>" />
                    <%= task[i] %>
                </li>
                <% } %>
                <button formaction="/removetask" type="submit"> Completed </button>
        </form>

        <h2> Completed task </h2>
        <% for(var i=0; i < complete.length; i++){ %>
            <li>
                <%= complete[i] %>
            </li>
            <% } %>
    </div>
</body>

</html>